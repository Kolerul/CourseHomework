<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChernykhHomework" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_blue</item>
        <item name="colorPrimaryVariant">@color/very_dark_blue</item>
        <item name="colorOnPrimary">@color/blue_white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/gilroy_light</item>
        <item name="android:textViewStyle">@style/BaseTextStyle</item>
        <item name="recyclerViewStyle">@style/LayoutStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="android:dialogTheme">@style/DialogFragmentStyle</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">@color/blue_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogFragmentText" parent="BaseTextStyle" />

    <style name="HeadlineTextStyle" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/blue_white</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/almost_very_dark_blue</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/almost_very_dark_blue</item>
        <item name="titleTextColor">@color/blue_white</item>
        <item name="android:padding">5dp</item>
        <item name="navigationIcon">@drawable/ic_account_circle</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:background">@color/very_dark_blue</item>
    </style>

    <style name="DialogFragmentStyle" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="titleTextColor">@color/blue_white</item>
        <item name="android:background">@color/almost_very_dark_blue</item>
        <item name="colorOnPrimary">@color/blue_white</item>
    </style>


</resources>