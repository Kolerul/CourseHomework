<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChernykhHomework" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_191</item>
        <item name="colorPrimaryVariant">@color/blue_140</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="recyclerViewStyle">@style/RecyclerViewStyle</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/gilroy_light</item>
        <item name="android:textViewStyle">@style/BaseTextStyle</item>
    </style>

    <style name="DialogFragmentText" parent="BaseTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadlineTextStyle" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/blue_191</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/blue_191</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="navigationIcon">@drawable/ic_account_circle</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:background">@color/very_light_grey</item>
    </style>

</resources>